<mvc:View controllerName="gestorcontenidos.controller.GestorContenido"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout">
    <Page title="{i18n>title}">
        <IconTabBar
		    id="idIconTabBarNoIcons"
		    expanded="{device>/isNoPhone}"
		    class="sapUiResponsiveContentPadding">
		    <items>
			    <IconTabFilter text="Información general" key="infogeneral">
                    <Panel width="auto" class="sapUiResponsiveMargin">
                        <headerToolbar>
                            <OverflowToolbar>
                                <Title text="Composición de bono"/>
			                </OverflowToolbar>
		                </headerToolbar>
                        <Text text="Alerta (Andes)" class="sapUiTinyMarginTop"/>
                        <l:HorizontalLayout 
                            class="sapUiContentPadding" 
                            width="100%">
                                <TextArea 
                                    value="Para ser elegible al cobro deberías estar activo en la fecha de pago informada. El cálculo del bono será proporcional a los días trabajados, Tené en cuenta que si durante el año tuviste algún cambio de seniotiry o en el scope de tu posición, el cálculo del bono reflejará estas propiedades. Ingresos entre octube y diciembre no son elegibles al pago del bono del año de su ingreso." 
                                     growing="true" 
                                     growingMaxLines="5" 
                                     width="100%"/>
		                </l:HorizontalLayout>
                    </Panel>
                    <Panel width="auto" class="sapUiResponsiveMargin">
                        <headerToolbar>
                            <OverflowToolbar>
                                <Title text="Tooltips"/>
                                <ToolbarSpacer />
                                <Button type="Emphasized" text="Agregar tooltip"/>
			                </OverflowToolbar>
		                </headerToolbar>
                        
                            <ComboBox
                                items="Performance Individual">
                                <core:Item key="per" text="Performance Individual" />
                                
                            </ComboBox>
                       
                    </Panel>
			    </IconTabFilter>

			    <IconTabFilter text="Preguntas frecuentes" key="preguntasfrec">
				
			    </IconTabFilter>
		    </items>
	    </IconTabBar>
    </Page>
</mvc:View>